generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins"]
  output          = "../generated/client"
}

generator pdfErd {
  provider      = "prisma-erd-generator"
  mermaidConfig = "mermaidConfig.js"
  output        = "erd/erd.md"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id                       String    @id
  name                     String
  surname                  String
  email                    String?   @unique
  phone                    String?
  startDate                DateTime?
  description              String?
  photoPath                String?
  favouriteDanceCategories Int[]     @default([])
  role                     Role
}

enum Role {
  INSTRUCTOR
  COORDINATOR
  STUDENT
  ADMINISTRATOR
}
