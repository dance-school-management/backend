generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins"]
  output          = "../generated/client"
}

generator pdfErd {
  provider      = "prisma-erd-generator"
  mermaidConfig = "mermaidConfig.js"
  output        = "erd/erd.md"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id                 Int               @id @default(autoincrement())
  name               String
  description        String
  danceCategory      DanceCategory?    @relation(fields: [danceCategoryId], references: [id])
  danceCategoryId    Int?
  advancementLevel   AdvancementLevel? @relation(fields: [advancementLevelId], references: [id])
  advancementLevelId Int?
  courseStatus       CourseStatus
  price              Decimal?          @db.Decimal(precision: 10, scale: 2)
  classTemplate      ClassTemplate[]
}

model DanceCategory {
  id            Int             @id @default(autoincrement())
  name          String          @unique
  description   String
  course        Course[]
  classTemplate ClassTemplate[]
  photoPath     String?
}

model AdvancementLevel {
  id            Int             @id @default(autoincrement())
  name          String          @unique
  description   String
  course        Course[]
  classTemplate ClassTemplate[]
}

model Class {
  id              Int           @id() @default(autoincrement())
  classTemplate   ClassTemplate @relation(fields: [classTemplateId], references: [id], onDelete: Cascade)
  classTemplateId Int
  startDate       DateTime
  endDate         DateTime
  peopleLimit     Int
  classRoom       ClassRoom     @relation(fields: [classRoomId], references: [id])
  classRoomId     Int
  classStatus     ClassStatus
  createdBy       String?
}

model ClassRoom {
  id          Int     @id @default(autoincrement())
  class       Class[]
  name        String  @unique
  peopleLimit Int
  description String
}

model ClassTemplate {
  id                 Int               @id() @default(autoincrement())
  class              Class[]           
  course             Course?           @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId           Int?
  name               String
  description        String
  price              Decimal           @db.Decimal(precision: 10, scale: 2)
  danceCategory      DanceCategory?    @relation(fields: [danceCategoryId], references: [id])
  danceCategoryId    Int?
  advancementLevel   AdvancementLevel? @relation(fields: [advancementLevelId], references: [id])
  advancementLevelId Int?
  classType          ClassType
  createdBy          String?
}

enum ClassType {
  GROUP_CLASS
  PRIVATE_CLASS
  THEME_PARTY
}

enum ClassStatus {
  HIDDEN
  NORMAL
  CANCELLED
  POSTPONED
}

enum CourseStatus {
  HIDDEN
  SALE
  ONGOING
  FINISHED
}
