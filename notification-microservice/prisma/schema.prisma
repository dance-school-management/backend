generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PushToken {
  userId String @id @unique
  token  String @unique

  notifications NotificationsOnTokens[]
}

model Notification {
  id       Int      @id @default(autoincrement())
  title    String
  body     String
  sendDate DateTime @default(now())
  payload  Json

  tokens NotificationsOnTokens[]
}

model NotificationsOnTokens {
  userId         String
  notificationId Int
  hasBeenRead    Boolean @default(false)

  notification Notification @relation(fields: [notificationId], references: [id], onDelete: Cascade)
  pushToken    PushToken    @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@id([userId, notificationId])
}
