generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PushToken {
  userId      String      @id
  token       String
  notifications Notification[]
}

model Notification {
  id          Int          @id @default(autoincrement())
  productId   Int
  userId      String
  user        PushToken    @relation(fields: [userId], references: [userId])
  productType ProductType
  title       String
  description String
  hasBeenRead Boolean      @default(false)
  sendDate    DateTime     @default(now())
}


enum ProductType {
  COURSE
  EVENT
  CLASS
}
