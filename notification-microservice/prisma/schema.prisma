generator client {
  provider = "prisma-client-js"
  output = "../generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Notification {
  id Int @id @default(autoincrement())
  productId Int
  userId Int
  productType ProductType
  title String
  description String
  hasBeenRead Boolean @default(false)
  sendDate DateTime @default(now())
}

enum ProductType {
  COURSE
  EVENT
  CLASS
}